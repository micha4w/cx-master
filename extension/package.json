{
  "name": "cx-master",
  "version": "1.2.1",
  "displayName": "Code-Expert Master",
  "author": "micha4w",
  "description": "A helper Addon to improve the Code-Expert experience",
  "scripts": {
    "build": "vite build",
    "build:dev": "vite build --mode development --minify false",
    "watch": "vite build --watch --mode development --minify false",
    "package:firefox": "npm run clean && env CX_BROWSER=firefox npm run build && web-ext build -s dist -a out/firefox -n code-expert-master-v$npm_package_version-firefox.zip --overwrite-dest",
    "package:chrome": "npm run clean && rm -f out/chrome/code-expert-master-v$npm_package_version-chrome.zip && env CX_BROWSER=chrome npm run build && mkdir -p out/chrome && cd dist && zip -r ../out/chrome/code-expert-master-v$npm_package_version-chrome.zip *",
    "clean": "rm -rf dist",
    "serve:firefox": "web-ext run -s dist -u 'https://expert.ethz.ch/ide2/6uxhJX82Wx99mu3Ta' -p '/home/micha4w/.mozilla/firefox/m41vdnzq.micha4w' --devtools",
    "serve:chrome": "web-ext run -t chromium -s dist u 'https://expert.ethz.ch/ide2/6uxhJX82Wx99mu3Ta'",
    "check": "svelte-check --tsconfig ./tsconfig.json"
  },
  "license": "MIT",
  "devDependencies": {
    "@samrum/vite-plugin-web-extension": "^5.1.0",
    "@sveltejs/vite-plugin-svelte": "^2.5.3",
    "@tsconfig/svelte": "^5.0.2",
    "@types/ace": "^0.0.52",
    "@types/chrome": "^0.0.263",
    "@types/webextension-polyfill": "^0.10.7",
    "svelte-check": "^3.6.6",
    "svelte-preprocess": "^5.1.3",
    "tslib": "^2.6.2",
    "typescript": "^5.4.2",
    "web-ext": "^7.2.0"
  },
  "dependencies": {
    "ace-builds": "^1.22.0",
    "ace-linters": "^1.1.0",
    "svelte": "^4.2.12",
    "vite-plugin-web-extension": "^4.1.2",
    "webextension-polyfill": "^0.10.0",
    "xterm": "^5.3.0",
    "xterm-link-provider": "^1.3.1"
  },
  "type": "module"
}
