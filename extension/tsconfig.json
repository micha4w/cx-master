{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "useDefineForClassFields": true,
    "resolveJsonModule": true,
    "strict": true,
    "baseUrl": ".",
    "allowJs": false,
    "paths": {
      "~/*": ["src/*"]
    },
  },
  "include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.js", "src/**/*.svelte"]
}
